<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"

  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E4DCCF"
        android:layout_height="146dp">

        <ImageView
            android:id="@+id/img_sach1"
            android:layout_width="150dp"
            android:layout_height="200dp"
             />
        <!--ten sach-->
        <TextView
            android:id="@+id/tvten"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten sach :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caona tham tu lung danh"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <!--tac gia-->
        <TextView
            android:id="@+id/tvtg"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tac gia :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtacgia"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aoyama Gōshō"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <!--The loai-->

        <TextView

            android:id="@+id/tvtl"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The loai :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/tvtheloai"
            android:layout_marginLeft="206dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trinh tham"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <!--id-->
        <TextView
            android:id="@+id/tvtv"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="90dp"
            android:text="duchai0408@gmail.com"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>