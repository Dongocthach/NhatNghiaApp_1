<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/isachs_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id phieumuon"/>
    <TextView
        android:id="@+id/isachs_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ten nguoi muon"/>
    <TextView
        android:id="@+id/isachs_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="tensachmuon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/isachs_tv4"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:hint="ngay muon"/>
        <TextView
            android:id="@+id/isachs_tv5"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:hint="ngay tra"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/isachs_tv6"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:hint="ten thu thu"/>
        <TextView
            android:id="@+id/isachs_tv7"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:hint="so tien can tra"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/isachs_btn1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="cap nhap"/>
        <Button
            android:id="@+id/isachs_btn2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="xoa"/>
    </LinearLayout>


</LinearLayout>