<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Ten nguoi muon: "/>
            <TextView
                android:id="@+id/isachs_tv2"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:hint="ten nguoi muon" />


        </LinearLayout>

        <TextView
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/isachs_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tensachmuon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/isachs_tv4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="ngay muon" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/isachs_tv5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="ngay tra" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/isachs_tv6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="ten thu thu" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/isachs_tv7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="so tien can tra" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/isachs_btn1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_margin="6dp"
                android:src="@drawable/capnhat"
                android:text="cap nhap"
                app:backgroundTint="@null" />

            <ImageView
                android:id="@+id/isachs_btn2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_margin="6dp"
                android:src="@drawable/pay"
                app:backgroundTint="@null" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>