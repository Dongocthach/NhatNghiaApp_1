<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/ithanhvien_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id thanh vien"/>
    <TextView
        android:id="@+id/ithanhvien_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ho va ten"/>
    <TextView
        android:id="@+id/ithanhvien_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="So dien thoai"/>
    <TextView
        android:id="@+id/ithanhvien_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngay Sinh"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ithanhvien_btn1"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="cap nhap"/>
        <Button
            android:id="@+id/ithanhvien_btn2"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="xoa"/>
    </LinearLayout>
</LinearLayout>