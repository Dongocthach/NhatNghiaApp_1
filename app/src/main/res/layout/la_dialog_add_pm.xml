<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="16dp"
    tools:context="Fragment.Fm_PhieuMuon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_phieumuon_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Them Phieu Muon"
                android:textAlignment="center"
                android:textColor="@color/dialog_textcolor"
                android:textSize="23sp"></TextView>

            <EditText
                android:id="@+id/dialog_phieumuon_ed1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/edittextborder"
                android:hint="ma sach"
                android:textColor="@color/dialog_textcolor"
                android:textColorHint="@color/dialog_textcolor"></EditText>

            <EditText
                android:id="@+id/dialog_phieumuon_ed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/edittextborder"
                android:hint="ma thu thu"
                android:textColor="@color/dialog_textcolor"
                android:textColorHint="@color/dialog_textcolor"></EditText>

            <EditText
                android:id="@+id/dialog_phieumuon_ed3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/edittextborder"
                android:hint="ma thanh vien"
                android:textColor="@color/dialog_textcolor"
                android:textColorHint="@color/dialog_textcolor"></EditText>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dialog_add_pm_btn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="0.5"
                    android:background="@color/button_bg"
                    android:text="Add"></Button>

                <Button
                    android:id="@+id/dialog_add_pm_btn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="0.5"
                    android:background="@color/button_bg"
                    android:text="Cancel"></Button>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>