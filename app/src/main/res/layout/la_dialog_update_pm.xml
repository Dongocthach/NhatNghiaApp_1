<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_update_pm_ngaytra"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.2"
            android:backgroundTintMode="src_atop"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_baseline_calendar_month_24" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_update_pm_tv0"
                android:padding="12dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dialog_textcolor"
                android:textSize="18sp"
                android:text="Hien Thi Ngay tra"/>
            <TextView
                android:id="@+id/dialog_update_pm_tv1"
                android:padding="12dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="@color/dialog_textcolor"
                android:text="Hien Thi Ngay tra"/>
    </LinearLayout>
    </LinearLayout>

    <Spinner
        android:layout_margin="12dp"
        android:id="@+id/dialog_update_pm_status"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:textColor="@color/dialog_textcolor"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_update_pm_1"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#7D9D9C"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:text="Ok"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_update_pm_2"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#7D9D9C"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:text="Save"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        android:text="Cancel"/>
    </LinearLayout>


</LinearLayout>